	excludesFile = ~/.config/git/ignore
	hooksPath = ~/.config/git/hooks
	pager = delta
[credential]
	helper = cache
[delta]
	light = true
	line-numbers = true
	max-line-length = 0
	navigate = true
	syntax-theme = GitHub
[diff]
	algorithm = histogram
	colorMoved = false
[diff "pem"]
	binary = true
	textconv = openssl x509 -noout -text -in
[diff "sqlite3"]
