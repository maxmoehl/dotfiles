[advice]
	detachedHead = false
	statusHints = false
[alias]
	a = add
	b = blame -w -C
	c = commit
	l = pull
	p = push
	s = status
	au = add --update
	cl = clone --filter=blob:limit=100k
	cp = cherry-pick
	rb = rebase
	sm = submodule
	advance = merge --ff-only
	fix = commit --fixup
	graph = log --all --decorate --oneline --graph
	last = log -1
	please = push --force-with-lease
	recommit = "!git commit -eF \"$(git rev-parse --git-dir)/COMMIT_EDITMSG\""
	root = rev-parse --show-toplevel
[blame]
	date = iso
[branch]
	sort = -committerdate
[checkout]
	defaultRemote = origin
[column]
	ui = auto
[commit]
	gpgSign = true
	status = true
	template = ~/.config/git/message
	verbose = true
[core]
	attributesFile = ~/.config/git/attributes
	autocrlf = input
	excludesFile = ~/.config/git/ignore
	hooksPath = ~/.config/git/hooks
	pager = delta
[credential]
	helper = cache
[delta]
	light = true
	line-numbers = true
	max-line-length = 0
	navigate = true
	syntax-theme = GitHub
[diff]
	algorithm = histogram
	colorMoved = false # messes with git-delta
	mnemonicPrefix = true
	renames = true
[diff "pem"]
	binary = true
	textconv = openssl x509 -noout -text -in
[diff "sqlite3"]
	binary = true
	textconv = echo .dump | sqlite3
[fetch]
	negotiationAlgorithm = skipping
	output = compact
	parallel = 16
	prune = true
	pruneTags = false
	recurseSubmodules = on-demand
[gpg]
	format = ssh
[grep]
	patternType = extended
[help]
	autoCorrect = never
[http]
	cookieFile = ~/.config/git/cookies
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[log]
	abbrevCommit = true
	date = iso
	decorate = short
[merge]
	conflictstyle = zdiff3
[pager]
	blame = delta
[pull]
	ff = only
[push]
	autoSetupRemote = true
	default = current
	recurseSubmodules = check
[rebase]
	abbreviateCommands = true
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn
	stat = true
[rerere]
	enabled = true
	autoUpdate = true
[stash]
	showPatch = true
[status]
	aheadBehind = true
	branch = true
	short = true
	showStash = true
[tag]
	sort = -version:refname
[user]
	signingkey = ~/.ssh/id_ed25519.pub
