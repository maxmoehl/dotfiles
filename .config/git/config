	negotiationAlgorithm = skipping
	output = compact
	parallel = 16
	prune = true
	pruneTags = true
	recurseSubmodules = on-demand
[gpg]
	format = ssh
[help]
	autoCorrect = prompt
[http]
	cookieFile = ~/.config/git/cookies
