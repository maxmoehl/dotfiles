	c = commit
	l = pull
	p = push
	s = status
	cl = clone --filter=blob:limit=100k
	sm = submodule
	graph = log --all --decorate --oneline --graph
	last = log -1
	please = push --force-with-lease
[blame]
	date = iso
[branch]
	sort = -committerdate
[column]
	ui = auto
